<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WeatherApp.WelcomePage"
             Title="WelcomePage"
             BackgroundColor="#512DA8">
    <StackLayout VerticalOptions="Center"
                 Margin="20"
                 Spacing="0">
        <Image Source="icon_02d"
               HeightRequest="200"
               WidthRequest="200" />
        <Label Text="Weather"
               FontSize="40"
               TextColor="#ffca28" />
        <Label Text="Forecase App."
               FontSize="40"
               TextColor="White" />
        <Label Text="It's the newest weather app. It has bunch of features and that includes most of the ones that every weather app has."
               TextColor="White"
               FontSize="Small" />
        <Button Text="Get Started"
                FontSize="Large"
                BackgroundColor="#ffca28"
                WidthRequest="250"
                Margin="0,50,0,0"
                x:Name="BtnGetStarted" 
                Clicked="BtnGetStarted_Clicked"/>
    </StackLayout>
</ContentPage>
